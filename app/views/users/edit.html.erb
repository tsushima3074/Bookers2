 <p class="notice"><%= flash[:notice] %></p>
  <% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
  <% end %>
        <div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label for="user_name">Name</label>
        <%= f.text_field :name, class: "form-control name" %>
      </div>

      <div class="form-group">
        <label for="inputImage">Image</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>

      <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <%= f.text_field :introduction, class: "form-control introduction" %>
      </div>

      <div class="form-group">
          <%= f.submit 'Update User', class: "btn btn-secondary" %>
      </div>
    <% end %>
</div>
</div>